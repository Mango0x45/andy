if true
	echo true branch

if false
	echo false branch

if true && false
	echo false branch

if true && true && true
	echo true branch

if test -f some-fake-file
	echo false branch

touch some-file
if test ! -f some-file
	echo false branch
else echo true branch

# TODO: Enable else-branch on its own line
if test ! -f some-file
	echo false branch
else echo true branch
rm some-file

if { echo foo; echo bar } {
	if echo baz
		echo hello
	else echo world
}

# Dangling-else
if false
	if true; echo foo
	else echo bar

set x 2
if test $x -eq 1 {
	echo 'x == 1'
} else if test $x -eq 2 {
	echo 'x == 2'
} else if test $x -eq 3 {
	echo 'x == 3'
} else {
	echo 'x ∉ {1, 2, 3}'
}

set x 69
if [ $x -eq 1 ]
	echo 'x == 1'
else if [ $x -eq 2 ]
	echo 'x == 2'
else if [ $x -eq 3 ]
	echo 'x == 3'
else echo 'x ∉ {1, 2, 3}'
