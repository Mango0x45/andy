(* Anything between ‘??’ represents a regex.  Regex character classes are
   unicode aware (‘\s’ matches all unicode spaces) *)

program = cmdlist;
cmdlist = pipeline, {lop, pipeline}, end;
pipeline = simple, {'|', simple};
simple = value, {value}, {redir};

redir =
	( '<'
	| '>'
	| '>|'
	| '>>'
	), value;
value = arg | string;

string = '"', ?[^"]*?, '"';
arg = ?[^|><;\n\s]+?;
lop = '&&' | '||';
end = ';' | '\n';
